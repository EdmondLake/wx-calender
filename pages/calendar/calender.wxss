/* pages/dateSelect/dateSelect.wxss */
.container{
  position:relative;
}

.week-box {
  position: fixed;
  top: 0;
  background: #f5f5f5;
  font-size: 30rpx;
  padding: 10rpx 0;
  display: flex;
  margin-bottom: 50rpx;
}

.date-list{
  padding:30rpx 0
}

.date-year-month{
  text-align: center;
  font-size:35rpx;
}

.date-day {
  display: flex;
  padding: 5px;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.date-day.bgitem {
  background-color: #d8ecf9;
}

.date-day.active {
  background: #099fde;
  color: #fff;
}

.date-day.unavailable {
  color: #aaa;
}

.date-week {
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 5px;
}

.week {
  color: #099fde;
}

.date-item {
  display: flex;
  flex-wrap: wrap;
  margin-top:30rpx;
}

.item-days {
  font-size: 30rpx;
}

.control-btns{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 5rpx 5rpx #cccccc;
}
.save-btn{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background: #099fde;
  color: #fff;
  text-align: center;
}
